<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fangsfmac.customview.loadingView_03.LoadingViewActivity">


    <com.example.fangsfmac.customview.loadingView_03.ProgressView
        android:id="@+id/progressView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:centerTextColor1="@android:color/black"
        app:centerTextSize1="25sp"
        app:borderWidth1="10dp"
        app:innerColor1="@color/colorPrimary"
        app:outColor1="@color/colorAccent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="click1"
        android:text="测试" />

</LinearLayout>
