<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fangsfmac.customview.letterIndexView_06.LetterIndexActivity">

    <TextView
        android:id="@+id/tvLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/tv_circle_shape"
        android:textColor="@android:color/background_dark"
        android:textSize="25sp" />


    <com.example.fangsfmac.customview.letterIndexView_06.LetterIndexView
        android:layout_width="wrap_content"
        app:letterTextSize="18sp"
        android:layout_height="match_parent"
        android:id="@+id/letterIndex"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:letterDefaultColor="@android:color/darker_gray"
        app:letterSelectedColor="@android:color/holo_blue_dark" />


</RelativeLayout>
